#encoding: -*- utf-8 -*-
# ------------------------------------------------- #
# --- Tela Principal
# ------------------------------------------------- #


<TPrincipal>:
	name: 'tprincipal'
	id: tela_principal

	FloatLayout:
		canvas:
			Color:
				#rgba: (0.04, 0.15, 0.26, 1)
			Rectangle:
				pos: self.pos
				size: self.size
                source: self.background_down
        background_down: '../assets/ImagesApp/fundo1.png'

		Label:
			text: 'Sistema de Controle de Acesso \n por RECONHECIMENTO FACIAL'
	        size_hint: (0.4, 1.5) 
			halign: 'left'
			valign: 'middle'
			bold: True
			font_size: '20sp'
			outline_width: 1
            outline_color: [0,0,0]
	        font_name: 'Roboto-Bold'


		# --- Barra Superior --- #
		FloatLayout:
			pos_hint: {'x': 0, 'top': 1}
			size_hint: (1, .1) 

			ModeloBtn:
				pos_hint: {'x': .73, 'top': .80}
				size_hint: (.11, .6)
				text: 'Registre-se' 
				on_release: app.root.current = 'tcadastro'
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular' 
				
			ModeloBtn:
				pos_hint: {'x': .85, 'top': .80}
				size_hint: (.13, .6)
				text: 'Reconhecimento' 
				on_release: app.root.current = 'treconhecimento'
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'


	 

 

 