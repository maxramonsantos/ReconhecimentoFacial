#:include kv_tela_principal.kv
#:include kv_tela_cadastro.kv
#:include kv_tela_reconhecimento.kv

# --- Modelo dos bot√µes --- #
<ModeloBtn@Button>:
	canvas:
		Color:
			rgba: (0.9, 0.9, 1, 1)
		Line:
			width: 1
			rectangle: self.x, self.y, self.width, self.height
	background_normal : '../assets/ImagesApp/trans100.png'
	color: (0.9, 0.9, 1, 1) 

# --- Modelo dos labels de titulo --- #
<ModeloLbTitulo@Label>:
	pos_hint: {'x': .05, 'top': 1}
	size_hint: (.3, 1)
	text_size: self.size
	color: (0.9, 0.9, 1, 1)
	halign: 'left'
	valign: 'middle'
	bold: False
	font_size: '30sp'
	outline_width: 1
    outline_color: [0,0,0]
	font_name: 'RobotoMono-Regular'


